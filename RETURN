}# include<stdio.h>
int  bala(int);
int bala(int a)
{
    int tot;
    while(a>0){
        tot=tot+a%10;
        a=a/10;
    }
    return tot;
}
void main()
{
    int a;
    int sum=0;
    while(1){

printf(" enter the sum");
scanf("%d",&a);
if(a==0)
break;
else
sum=sum+bala(a);
}
}
